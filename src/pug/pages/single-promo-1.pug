block content
  section.container.single-news
    <svg class="page-svg single-news__svg" xmlns="http://www.w3.org/2000/svg" width="265" height="219" viewBox="0 0 265 219" fill="none">
      <path d="M339.534 -177.04C400.735 -155.157 382.439 -49.8358 298.67 58.2024C214.901 166.241 97.3804 236.084 36.1801 214.201C-25.0202 192.319 -6.72468 86.9974 77.0443 -21.0408C160.813 -129.079 278.334 -198.922 339.534 -177.04Z" fill="#B3BECD"/>
    </svg>
    .single-news__left-container 
      include ../includes/breadcrumbs.pug
      .single-news__back-btn 
        a(href="/progress.html") 
          button.swiper-button-next.ellipse-btn 
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M2 10.582H19.1757V13.4195H2V10.582Z" fill="#393028"/>
